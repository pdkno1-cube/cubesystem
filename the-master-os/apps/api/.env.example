# ============================================================================
# The Master OS — FastAPI Environment Variables
# Copy to .env and fill in required values
# See: TEAM_G_DESIGN/architecture/ENV-CONFIG.md for full documentation
# ============================================================================

# --- FastAPI Server ---
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=development
API_DEBUG=false
API_CORS_ORIGINS=http://localhost:3000
API_SECRET_KEY=
API_RATE_LIMIT_PER_MINUTE=100
API_WORKERS=4

# --- Supabase ---
SUPABASE_URL=http://localhost:54321
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Sentry (optional in development) ---
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# --- Vault / Encryption ---
VAULT_ENCRYPTION_KEY=
VAULT_KEY_ROTATION_DAYS=90

# --- JWT ---
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# --- LLM API Keys ---
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# --- Celery / Task Queue (optional — requires Redis) ---
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# --- Email (Resend) ---
RESEND_API_KEY=

# --- PaddleOCR Service ---
PADDLEOCR_URL=http://localhost:8866

# --- Logging ---
LOG_LEVEL=INFO
LOG_FORMAT=json
